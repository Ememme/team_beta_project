.form-header
  =t('devise.passwords.forgot_password')
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = f.input :email, placeholder: t('simple_form.labels.defaults.email'),equired: true, autofocus: true, label: false
  = f.button :button, t('devise.passwords.forgot_password_button')
%p.message
  = render "admin_users/shared/links"
