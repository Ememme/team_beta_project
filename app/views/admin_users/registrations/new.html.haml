.form-box
  %p=t('administrate.setup.installation_complete')
  %p=t('administrate.setup.last_step')

.form-header=t('administrate.setup.add_admin')
= simple_form_for(resource, as: resource_name, url: setup_admin_path) do |f|
  = f.input :email, required: false, autofocus: true, placeholder: t('simple_form.labels.defaults.email'), label: false
  = f.input :password, required: true, placeholder: "#{t('simple_form.labels.defaults.password')} #{t('devise.registrations.minimum_password_length', min_length: @minimum_password_length) if @minimum_password_length})", label: false
  = f.input :password_confirmation, required: true, placeholder: t('simple_form.labels.defaults.password_confirmation'), label: false

  = f.button :button, t('administrate.setup.forward')
